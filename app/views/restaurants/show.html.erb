<nav class="navbar navbar-dark bg-dark" style="background-color: #e3f2fd;"><h1><%= @restaurant.name %></h1> <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-primary" %>
</nav>

<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>
<p><%= @restaurant.phone_number %></p>

<hr>
<h1>Reviews</h1>
<ul>
  <% @restaurant.reviews.each do |review| %>
  <li class = ><%= review.content %>: <%= review.rating %></li>
  <% end %>
</ul>

<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>

<%= render "/reviews/new" %>